                <MenuItem x:Name="AutoScroll" Header="_Auto Scroll" IsCheckable="true" IsChecked="True" Click="switchAutoscroll"/>
                <MenuItem x:Name="Clear" Header="_Clear List" IsCheckable="true" IsChecked="False" Click="clearListbox"/>
