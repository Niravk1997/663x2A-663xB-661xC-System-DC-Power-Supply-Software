                    <MenuItem x:Name="AR4"  Header="_A &lt; 400mA" IsCheckable="True" IsChecked="False" Click="CRange_4"/>
                    <MenuItem x:Name="AR5"  Header="_A &lt; 500mA" IsCheckable="True" IsChecked="False" Click="CRange_5"/>
